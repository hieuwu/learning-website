<!-- course detail -->
<section class="section-sm">
  <div class="container">
    <div class="row">
      <div class="col-12 mb-4">
        <!-- course thumb -->
        <img src="/public/images/course/{{course.IdCourse}}/thumb.jpg" class="img-fluid w-100" </div>
      </div>
      <!-- course info -->
      <div class="row align-items-center mb-5">
        <div class="row align-items-center mb-3">
          <h1>{{course.nameCourse}}</h1>
        </div>
        <div class="col-xl-10 order-sm-3 order-xl-2 col-12 order-2 mb-3">
          <ul class="list-inline text-xl-center">
            <li class="list-inline-item mr-4 mb-3 mb-sm-0">
              <div class="d-flex align-items-center">
                <img src="/public//icon/update-time.png" class="ti-alarm-clock text-primary icon-md mr-2" />
                <div class="text-left">
                  <h6 class="mb-0">UPDATE TIME</h6>
                  <p class="mb-0">{{course.updatedTime}}</p>
                </div>
              </div>
            </li>
            <li class="list-inline-item mr-4 mb-3 mb-sm-0">
              <div class="d-flex align-items-center">
                <img src="/public/icon//fee.png" class="ti-wallet text-primary icon-md mr-2" />
                <div class="text-left">
                  <h6 class="mb-0">FEE</h6>
                  <p class="mb-0">${{course.Price}}</p>
                </div>
              </div>
            </li>
            <li class="list-inline-item mr-4 mb-3 mb-sm-0">
              <div class="d-flex align-items-center">
                <img src="/public/icon/promotion.png" class="ti-wallet text-primary icon-md mr-2" />
                <div class="text-left">
                  <h6 class="mb-0">PROMOTION</h6>
                  <p class="mb-0">${{course.SaleCost}}</p>
                </div>
              </div>
            </li>
            <li class="list-inline-item mr-4 mb-3 mb-sm-0">
              <div class="d-flex align-items-center">
                <img src="/public/icon/student.png" class="ti-wallet text-primary icon-md mr-2" />
                <div class="text-left">
                  <h6 class="mb-0">STUDENTS</h6>
                  <p class="mb-0">{{course.subscribe}}</p>
                </div>
              </div>
            </li>
            <li class="list-inline-item mr-4 mb-3 mb-sm-0">
              <div class=" align-items-center">
                <div class="text-left">
                  <h6 class="mb-0">RATING</h6>
                  <div class="d-flex align-items-center">
                    <p class="mb-0 mr-3 avgRating">{{course.avgRate}}</p>
                    <div class="ratingStar" value={{course.avgRate}}></div>
                    <p class="mb-0">({{this.numberRating}} Ratings)</p>
                  </div>
                </div>
              </div>
            </li>

          </ul>
        </div>

        <div class="order-xl-3 mb-4 mb-xl-0 my-flex">
    
        </div>
      </div>

      <!-- about course -->
        <div class="col-12 mb-4">
          <h3>About Course</h3>
          <p><strong>Category: </strong>{{course.NameCategory}}</p>
          <p><strong>Title: </strong>{{course.title}}</p>
        </div>

        <!-- Course Content -->
        <div class="col-12 mb-4">
            <div class="container">
                <div class="row">

                <div class="item-content col-md-3">
                    <h3>Course Content</h3>
                </div>
                <div class="col-md-7"></div>
                <div class="col-md-1 p-1">
                    {{#if isFinish}}
                    <a type="button" class="btn btn-success mt-2 glyphicon glyphicon-ok" >&nbspDone&nbsp</a>
                    {{else}}
                    <a type="button"  href="/teacher/course/upload/{{course.IdCourse}}"   class="btn btn-outline-success mt-2 glyphicon glyphicon-ok">&nbspUpload&nbsp</a>
                    {{/if}}
                </div>
                <div class="col-md-1 p-1">
                    <a type="button" href="/teacher/course/edit/{{course.IdCourse}}" class="btn mt-2 btn-danger glyphicon glyphicon-pencil">&nbspEdit&nbsp</a>
                </div>
                <div class="iten-content col-8"></div>
                </div>
            </div>


          <div class="accordion" id="accordionExample1">
            {{#each listChapter}}
            <div class="accordion-item">
              <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                  data-bs-target={{this.dataBsTarget}} aria-expanded="true"
                  aria-controls={{this.IdDiv}}>
                  {{this.NameChapter}}
                </button>
              </h2>
              <div id={{this.IdDiv}} class="accordion-collapse collapse show row"
                aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                {{#each ListLesson}}
                <a class="accordion-body" href="/teacher/course/{{this.idCourse}}/chapter/{{this.idChapter}}/lesson/{{this.idLesson}}"
                target="_blank">
                  {{this.NameLesson}}
                </a>
                {{/each}}
              </div>
            </div>
            {{/each}}
          </div>
        </div>
        <!-- Description -->
        <div class="col-12 mb-4">
          <h3>Description</h3>
          <p>{{{course.Description}}}</p>
        </div>
        <!-- teacher -->
        <div class="col-12 mb-4">
          <h3 class="mb-3">Teacher<a href="/teacher/profile" class="fa fa-pencil fa-1x"></a></h3>
          
          <div class="d-flex justify-content-between align-items-center">
            <div class="media mb-2 mb-sm-0">
              <img src="/public/images/teacher/teacher.jpg" class="image-teacher" alt="Teacher">
              <div class="media-body">
                <h4 class="mt-0">{{teacher.FullName}}</h4>
                <p><strong>email:</strong>  {{teacher.Email}}</p>
                <p><strong>biography:</strong> {{teacher.Biography}}</p>
              </div>
            </div>
          </div>
      </div>
    </div>
</section>
<section class="section pt-0">
  <div class="container">
    <div class="row">
      <div>
        {{!-- <h2 class="section-title">Related Course</h2> --}}
      </div>
    </div>

  </div>
</section>
